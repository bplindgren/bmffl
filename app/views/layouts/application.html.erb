    <body>
        <div id="wrapper">
            <div class="row">
                <div id="header" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 black-bg">
                    <div class="row">
                        <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2 image"><%= link_to (image_tag("logo.png")), root_path %></div>
                        <div class="col-lg-1 col-md-1 col-sm-1 col-xs-1"></div>
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9 black-bg" id="scoreboard">
                            <ul class="list-group">
                                <% Game.all.last(5).each do |game| %>
                                    <li class="list-group-item scoreboard-top">
                                        <p class="game-date">9/8 - 9/12</p>
                                        <div class="team-name col-lg-10">
                                            <p><%= game.away_team.abbr %></p>
                                            <p><%= game.home_team.abbr %></p>
                                        </div>
                                        <div class="team-score col-lg-10">
                                            <p><%= game.away_score %></p>
                                            <p><%= game.home_score %></p>
                                        </div>
                                    </li>
                                <% end %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

