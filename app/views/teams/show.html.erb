<h2><%= @team.name %> - <%= @team.season.year %> Season</h2>

  <table class="table table-striped pagination-centered"> <!-- striped, bordered, hover, condensed -->
    <tr>
      <th class="heading">Week</th>
      <th class="heading">Away Team</th>
      <th class="heading">Home Team</th>
      <th class="heading">Result</th>
    </tr>
    <% @games.each do |game| %>
      <tr>
        <th><%= (@games.index(game) + 1) %></th>
        <th><%= game.away_team.name %></th>
        <th><%= game.home_team.name %></th>
        <th>

          <% if game.winner == @team %>
            <% if game.home_team == @team %>
              <%= 'W,' %> <%= game.home_score %> - <%= game.away_score %>
            <% elsif game.away_team == @team %>
              <%= 'W,' %> <%= game.away_score %> - <%= game.home_score %>
            <% end %>
          <% end %>

          <% if game.loser == @team %>
            <% if game.home_team == @team %>
              <div class="loss"><%= 'L,' %> <%= game.home_score %> - <%= game.away_score %></div>
            <% elsif game.away_team == @team %>
              <div class="loss"><%= 'L,' %> <%= game.away_score %> - <%= game.home_score %></div>
            <% end %>
          <% end %>

        </th>
      </tr>
    <% end %>
  </table>